    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/index.js"
        },
        {
      "name": "Launch with nodemon",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
      "args": ["${workspaceRoot}/index.js"],
      "protocol": "inspector",

      "runtimeArgs": ["--nolazy"]
    },
    {
        "name": "node:nodemon",
        "type": "node",
        "request": "attach",
        
        "restart": true,
        "protocol": "inspector"

      }
    ]
}